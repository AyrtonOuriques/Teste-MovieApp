{
    "version": 2,
    "builds": [
      {
        "src": "backend/MovieAppAPI/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
      },
      {
        "src": "backend/build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "backend/staticfiles"
        }
      }
    ],
  "routes": [
    {
      "src": "backend/static/(.*)",
      "dest": "/backend/staticfiles/$1"
    },
    {
      "src": "backend/(.*)",
      "dest": "backend/MovieAppAPI/wsgi.py"
    }
  ]
  }